<% layout('/layouts/userbp') %> 
<section>
    <div class="container col-12 col-sm-8 col-md-6  justify-content-center shadow-lg  mb-5">
        <div class="p-5 m-5">
                <h3>Login</h3>
                <form action="/user/login" method="post" class="needs-validation" novalidate>
                    <div class="mb-3 ">
                        <label class="form-label" for="email">Email:</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password:</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <p class="logCheck mt-2" ><a href="/user/registerotp" style="text-decoration:none;">don't have an accout?create One</a></p>
    
                    </div>
                    <button class="btn btn-primary">Login</button>
                    <a href="/user/otplogin" class="btn btn-info">Otp Login</a>
                </form>
           
        </div>
    </div>
    
</section>
