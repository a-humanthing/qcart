<% layout('/layouts/userbp') %> 
<section>
    <div class="userLogin shadow mb-5 m-5 container">
        <div class="p-5">
            <h3>Login</h3>
            <div   class="needs-validation" novalidate>
                <form action="/user/otplogin" method="post" class="logCheck">
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                    <div class="mt-3">
                        <button class="btn btn-primary"> Send Otp </button>
                    </div>
                </form>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="otp">Otp:</label>
                    <input class="form-control" type="text" id="otp" name="otp" required>
                    <p class="logCheck"><a href="/user/register">don't have an accout?create One</a></p>

                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Login</button>
                </div>
            </div>
        </div>
    </div>
</section>
