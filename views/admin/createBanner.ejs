<% layout('/layouts/newbp') %> 
<div class="p-5 m-5">
    <div class="mb-5">
        <h1>Create New Banner</h1>
    </div>
    <form action="/admin/banner/new" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <input type="text" class="form-control" name="bannerName" placeholder="Enter Banner Name " id="bannerName"  required >

        </div>
     
        <div class="mb-3"  >
            <input type="text" class="form-control" placeholder="Enter Main Heading" name="mainHeading" id="mainHeading"  >
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Enter Sub Heading" name="subHeading" id="subHeading"  >
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Enter Description" name="description" id="description"  >
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image</label>
            <input class="form-control" type="file" name="image" id="image" multiple >
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
        
    </form>
</div>

