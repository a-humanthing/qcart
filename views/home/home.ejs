<% layout('/layouts/userbp') %>
<!-- Start Banner Hero -->
<div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% if(banners){ %> <% for(let banner of banners){ %> <%
    if(banners.indexOf(banner)===0){ %>
    <div class="carousel-item active">
      <% }else{%>
      <div class="carousel-item">
        <% } %>
        <div class="banner-container">
          <div id="banner<%=banners.indexOf(banner) %>" class="banner">
            <div class="shoe">
              <%for(let img of banner.image){%>
              <img src="<%=img.url%>" alt="" />
              <%}%>
            </div>
            <div class="content">
              <span><%= banner.mainHeading %></span>
              <h3><%= banner.subHeading %></h3>
              <p><%= banner.description %></p>
              <a href="#" class="btn my-auto">View offer</a>
            </div>
            <div class="women">
              <img src="/image/banner/women.png" alt="" />
            </div>
          </div>
        </div>
      </div>
      <% } %> <% }else{ %>

      <div class="carousel-item">
        <div class="banner-container">
          <div id="banner0" class="banner">
            <div class="shoe">
              <img src="/image/banner/shoe.png" alt="" />
            </div>
            <div class="content">
              <span>Upto</span>
              <h3>50% 0ff</h3>
              <p>offer ends after 5 days</p>
              <a href="#" class="btn">view offer</a>
            </div>
            <div class="women">
              <img src="/image/banner/women.png" alt="" />
            </div>
          </div>
        </div>
      </div>

      <% } %>
    </div>

    <a
      class="carousel-control-prev text-decoration-none w-auto ps-3"
      href="#bannerCarousel"
      role="button"
      data-bs-slide="prev"
    >
      <i class="fas bg-success fa-chevron-left"></i>
    </a>
    <a
      class="carousel-control-next text-decoration-none w-auto pe-3"
      href="#bannerCarousel"
      role="button"
      data-bs-slide="next"
    >
      <i class="fas bg-success fa-chevron-right"></i>
    </a>
  </div>
  <!-- End Banner Hero -->

  <!-- Start Categories of The Month -->
  <section class="container py-5">
    <div class="row text-center pt-3">
      <div class="col-lg-6 m-auto">
        <h1>Categories of The Month</h1>
      </div>
    </div>
    <div class="row justify-content-center">
      <% for(let i=0;i<4;i++){%>
      <div class="col-12 col-md-3 p-5 mt-3">
        <div class="d-flex justify-content-center">
          <img
            src="<%=categoriesOfMonth[i].image.url %>"
            class="rounded-circle circular--landscape img-fluid border"
          />
        </div>
        <h5 class="text-center mt-3 mb-3">
          <%=categoriesOfMonth[i].category %>
        </h5>
        <p class="text-center">
          <a
            href="/user/category/<%=categoriesOfMonth[i].category%>"
            class="btn btn-success"
            >Go Shop</a
          >
        </p>
      </div>
      <% } %>
    </div>
  </section>
  <!-- End Categories of The Month -->

  <!-- Start Featured Product -->
  <section class="py-5">
    <div class="container">
      <div class="row text-center text-left p-2 pb-3">
        <h2>Featured Products</h2>
      </div>

      <!--Start Carousel Wrapper-->
      <!-- related products -->
      <div
        id="carousel-related-product"
        class="row justify-content-between"
      ></div>
    </div>
  </section>

  <script src="/js/loadProduct.js"></script>
  <script src="/js/addtocart.js"></script>
</div>
